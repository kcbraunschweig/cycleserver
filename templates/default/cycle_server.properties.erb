#

driver=org.apache.derby.jdbc.ClientDriver
url=jdbc:derby://localhost:1527/cycle_server
username=user
password=pass

maxActiveDatabaseConnections=<%= node["cycle_server"]["grill"]["maxActiveDatabaseConnections"] %>

webServerMaxHeapSize=<%= node["cycle_server"]["grill"]["webServerMaxHeapSize"] %>

webServerJvmOptions=

webServerPort=8080

webServerSslPort=8443

# The URL prefix that CycleServer should be hosted on.
# For instance, if this is set to /cycle_server and webServerPort=8080, then
# CycleServer's main page will be http://localhost:8080/cycle_server.
webServerContextPath=/

# HTTP
webServerEnableHttp=true

# HTTPS
webServerEnableHttps=false

# Required if HTTPS is enabled
webServerKeystoreFile=${cycle_server.home}/.keystore

# Required if HTTPS is enabled
webServerKeystorePass=changeit

# Optional. Needed only for plugins that connect to an SSL server
# that uses a certificate signed by an untrusted CA
webServerTruststoreFile=${cycle_server.home}/.truststore

# Optional. Needed only if webServerTruststoreFile is defined
webServerTruststorePass=changeit

# The port to listen for shutdown commands. There is rarely a need to change it, but it is
# not possible to disable it for Windows. This value is not the default,
# so there shouldn't be conflicts with other Tomcat installs on the same machine, but if there are
# then it can be changed here.
tomcat.shutdownPort=8007

databaseMaxHeapSize=<%= node["cycle_server"]["grill"]["databaseMaxHeapSize"] %>

databaseJvmOptions=

# The maximum memory for the message queue broker
brokerMaxHeapSize=<%= node["cycle_server"]["grill"]["brokerMaxHeapSize"] %>

# Additional JVM options for the message queue broker
brokerJvmOptions=

# The port that the message queue broker is on. Defaults to 5672.
brokerPort=5672

# define this to enable JMX access to the broker
brokerJmxPort=<%= node["cycle_server"]["grill"]["brokerJmxPort"] || '' %>
